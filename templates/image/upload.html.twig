{% extends 'base.html.twig' %}

{% block title %}Upload Image{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">

            <!-- Back to Home button -->
            <div class="mb-4">
                <a href="/"
                   class="inline-block bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300">
                    ‚Üê Back to Home
                </a>
            </div>

            <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Upload Image</h1>

            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.imageFile, null, {'label_attr': {'class': 'block text-gray-700 mb-1'}}) }}
                {{ form_widget(form.imageFile, {'attr': {'class': 'block w-full text-sm text-gray-700 border border-gray-300 rounded-md shadow-sm'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.visibility, null, {'label_attr': {'class': 'block text-gray-700 mb-1'}}) }}
                {{ form_widget(form.visibility, {'attr': {'class': 'block w-full text-sm text-gray-700 border border-gray-300 rounded-md shadow-sm'}}) }}
            </div>

            <button class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md shadow">
                Upload
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
