{% extends 'base.html.twig' %}

{% block title %}My Images{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-center mb-6">My Images</h1>

        <!-- Back to Home button -->
        <div class="flex justify-start mb-4">
            <a href="/"
               class="bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300">
                ‚Üê Back to Home
            </a>
        </div>

        <!-- Search form -->
        <form method="get" action="{{ path('my_images') }}" class="flex justify-center mb-8">
            <input type="text" name="q" value="{{ search }}" placeholder="Search by keyword or text..."
                   class="border border-gray-300 rounded-l px-4 py-2 w-1/2 max-w-md">
            <button type="submit"
                    class="bg-blue-600 text-white px-4 py-2 rounded-r hover:bg-blue-700">Search</button>
        </form>

        {% if images is empty %}
            <p class="text-center text-gray-500">No images found.</p>
        {% else %}
            <div class="flex flex-wrap justify-center gap-4">
                {% for image in images %}
                    <div class="border rounded overflow-hidden shadow bg-white" style="width: 200px; height: 200px;">
                        <img src="{{ asset('uploads/' ~ image.filename) }}"
                             alt="Image"
                             style="width: 100%; height: 100%; object-fit: cover;"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="hidden items-center justify-center text-sm text-gray-500 h-full">
                            Image not found
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
