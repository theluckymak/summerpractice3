{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-r from-blue-500 to-purple-600 text-white text-center">
        <h1 class="text-5xl font-bold mb-6">Welcome</h1>
        <p class="text-lg mb-10">Upload and search your images with ease</p>

        <div class="flex flex-col items-center space-y-4">
            {% if app.user %}
                <a href="/upload" class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition">
                    Upload Image
                </a>

                <a href="/my-images" class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition">
                    My Images
                </a>

                <a href="/public-images" class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition">
                    Public Images
                </a>

                <a href="{{ path('app_logout') }}" class="px-6 py-3 bg-white text-red-600 font-semibold rounded-lg hover:bg-gray-100 transition">
                    Logout
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition">
                    Log In
                </a>

                <a href="{{ path('app_register') }}" class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition">
                    Register
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
